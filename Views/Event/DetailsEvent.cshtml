@model PracaDyplomowa.ViewsModel.DetailsEventVM
<div class="row">
    <div asp-validation-summary="All" class="col-12 text-center text-danger"></div>
</div>
<div class="row">
    <div class="col-12 text-center" id="EventName"><h2>@Model.eventDetail.Name</h2></div>
</div>
<div class="row">

    <div class="col-md-8" id="EventData">

        @if (Model.eventDetail.Tags != null)
        {
            @foreach (EventeTag t in Model.eventDetail.Tags)
            {
                <div class="form-check form-check-inline text-success">
                    <h4>@t.Tag.Name</h4>
                </div>
            }
        }
        <h3>Miejsce: @Model.eventDetail.Place</h3>
        <h3>Data rozpoczęcia: @Model.eventDetail.DateStart</h3>
        <h3>Data Zakończenia: @Model.eventDetail.DateEnd</h3>
        <h3>Organizator: <button class="btn btn-primary my-1 mx-0 text-center" onclick="displayOwnerDescription()">@Model.eventDetail.FirmAccount.FirmName</button></h3>
        <h4 class=" d-none" id="ownerDescription">@Model.eventDetail.FirmAccount.FirmDescriotion</h4>
        <hr />
        <h3>
            <p style=" white-space: pre
">@Model.eventDetail.Description</p>
    </h3>




    </div>
    <div class="col-md-7 d-none m-1" id="updateEventForm">
        <form method="post" asp-action="UpdateEvent" class="">
            <div class="form-group">

                <div class="col-12 d-none">
                    <input asp-for="@Model.eventDetail.EventId" value="@Model.eventDetail.EventId" class="form-control" />
                    <span asp-validation-for="@Model.eventDetail.EventId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.eventDetail.Name" class="custom-control-label col-12">Nazwa</label>
                <div class="col-12">
                    <input asp-for="@Model.eventDetail.Name" class="form-control" />
                    <span asp-validation-for="@Model.eventDetail.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.eventDetail.ShortDescription" class="col-2 custom-control-label">Krótki opis</label>
                <div class="col-sm-10">
                    <textarea asp-for="@Model.eventDetail.ShortDescription" class="form-control" maxlength="500" rows="5"></textarea>
                    @*<input asp-for="ShortDescription" class="form-control" />*@
                    <span asp-validation-summary="@Model.eventDetail.ShortDescription" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group ">
                <label asp-for="CheckedTags" class="col-2 custom-control-label ">Tagi</label>
                <div class="col-sm-10 ">
                    @if (Model.Tags != null)
                    {
                        @foreach (Tag t in Model.Tags)
                        {
                            <div class="form-check form-check-inline">
                                @{ bool isEventTag = false;}
                                @if (Model.eventDetail.Tags != null)
                                    @foreach (var item in Model.eventDetail.Tags)
                                    {

                                        if (t.TagId == item.TagId)
                                        {
                                            isEventTag = true;

                                        }
                                    }
                                @if (isEventTag)
                                {
                                    <input class="form-check-input" name="CheckedTags" type="checkbox" value="@t.TagId" checked>
                                    <label class="form-check-label" asp-for="CheckedTags">@t.Name</label>
                                }
                                else
                                {
                                    <input class="form-check-input" name="CheckedTags" type="checkbox" value="@t.TagId">
                                    <label class="form-check-label" asp-for="CheckedTags">@t.Name</label>
                                }

                            </div>
                        }
                    }
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.eventDetail.Description" class="col-2 custom-control-label">Opis</label>
                <div class="col-sm-10">
                    <textarea asp-for="@Model.eventDetail.Description" class="form-control" maxlength="10000" rows="10"></textarea>
                    <span asp-validation-summary="@Model.eventDetail.Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.eventDetail.Place" class="custom-control-label col-12">Miejsce</label>
                <div class="col-12">
                    <input asp-for="@Model.eventDetail.Place" class="form-control" />
                    <span asp-validation-for="@Model.eventDetail.Place" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="@Model.eventDetail.DateStart" class="custom-control-label col-12">Data początku</label>
                <div class="col-12">
                    <input asp-for="@Model.eventDetail.DateStart" class="form-control" />
                    <span asp-validation-for="@Model.eventDetail.DateStart" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.eventDetail.DateEnd" class="custom-control-label col-12">Data końca</label>
                <div class="col-12">
                    <input asp-for="@Model.eventDetail.DateEnd" class="form-control" />
                    <span asp-validation-for="@Model.eventDetail.DateEnd" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Aktualizuj"class=" btn-primary btn " />
            </div>

        </form>
    </div>
    @if (User.Identity.IsAuthenticated)
