@model PracaDyplomowa.ViewsModel.AddEventVM

    <form asp-action="AddEvent" asp-controller="Event" method="post" role="form" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-2 custom-control-label">Nazwa</label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-summary="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ShortDescription" class="col-2 custom-control-label">Krótki opis</label>
            <div class="col-sm-10">
                <input asp-for="ShortDescription" class="form-control" />
                <span asp-validation-summary="ShortDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-2 custom-control-label">Opis</label>
            <div class="col-sm-10">
                <textarea  asp-for="Description" class="form-control" maxlength="1000" rows="10"></textarea>
                <span asp-validation-summary="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Place" class="col-2 custom-control-label">Miejsce</label>
            <div class="col-sm-10">
                <input asp-for="Place" class="form-control" />
                <span asp-validation-summary="Place" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateStart" class="col-2 custom-control-label">Data rozpoczęcia </label>
            <div class="col-sm-10">
                <input asp-for="DateStart" class="form-control textarea-autosize"  value=""/>
                <span asp-validation-summary="DateStart" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateEnd" class="col-2 custom-control-label">Data zakończenia</label>
            <div class="col-sm-10">
                <input asp-for="DateEnd" class="form-control" value=""   />
                <span asp-validation-summary="DateEnd" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group d-none">
            <div class="col-sm-10">
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-summary="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-5">
            <input type="submit" class="btn btn-primary" />

        </div>
    </form>